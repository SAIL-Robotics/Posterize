<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sailrobotics.posterize" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/posterize_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CameraActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CropImageActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ApplyEffectsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".PosterMeasurementsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".GalleryActivity"
            android:label="@string/title_activity_gallery" >
        </activity>
        <activity
            android:name=".PosterizeActivity"
            android:label="@string/title_activity_posterize" >
        </activity>
        <activity
            android:name=".PosterSummaryActivity"
            android:label="@string/title_activity_poster_summary" >
        </activity>
        <activity
            android:name=".TakeCameraMeasurement"
            android:label="@string/title_activity_poster_summary" >
        </activity>
        <activity
            android:name=".MarkReferenceActivity"
            android:label="@string/title_activity_poster_summary" >
        </activity>
        <activity
            android:name=".GoogleDriveActivity"
            android:label="@string/title_activity_poster_summary" >
        </activity>
        <activity
            android:name=".FlickrActivity"
            android:label="@string/title_activity_flickr" >
        </activity>
        <activity
            android:name=".InstructionActivity"
            android:label="InstructionActivity" >
        </activity>
        <activity
            android:name=".RulerActivity"
            android:label="RulerActivity" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".UploadPDFWebServer"
            android:label="@string/title_activity_upload_pdfweb_server" >
        </activity>
        <activity
            android:name=".TwitterActivity"
            android:label="@string/title_activity_twitter" >
        </activity>
        <activity
            android:name=".TwitterWebViewActivity"
            android:label="@string/title_activity_twitter_web_view" >
        </activity>
    </application>

</manifest>
